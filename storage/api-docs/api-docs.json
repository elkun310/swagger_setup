{
    "openapi": "3.0.0",
    "info": {
        "title": "APIs For Thrift Store",
        "version": "1.0.0"
    },
    "paths": {
        "/api/home": {
            "post": {
                "tags": [
                    "Home"
                ],
                "summary": "Home data",
                "operationId": "abafb0f86a9cf6ab5f4b5926383645d6",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Provide your name",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/api/terms": {
            "get": {
                "tags": [
                    "Terms"
                ],
                "summary": "Get list of terms",
                "operationId": "e3879f0f8d4c89ae63a5ab3c7201cbaf",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Response message",
                                            "type": "string",
                                            "example": "OK"
                                        },
                                        "total": {
                                            "description": "Total number of terms",
                                            "type": "integer"
                                        },
                                        "terms": {
                                            "description": "List of terms",
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "version": {
                                                        "description": "Version of the term",
                                                        "type": "string"
                                                    },
                                                    "title": {
                                                        "description": "Title of the term",
                                                        "type": "string"
                                                    },
                                                    "content": {
                                                        "description": "Content of the term",
                                                        "type": "string"
                                                    },
                                                    "apply_date": {
                                                        "description": "Apply date of the term",
                                                        "type": "string",
                                                        "format": "date"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Terms"
                ],
                "summary": "Create a new term",
                "description": "Creates a new term with the provided details.",
                "operationId": "storeTerm",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "version",
                                    "title",
                                    "apply_date"
                                ],
                                "properties": {
                                    "version": {
                                        "type": "string",
                                        "example": "1.0.0"
                                    },
                                    "title": {
                                        "type": "string",
                                        "example": "Terms Title"
                                    },
                                    "apply_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-03-20"
                                    },
                                    "content": {
                                        "type": "string",
                                        "example": "Optional content",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Term created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "version": {
                                            "type": "string",
                                            "example": "1.0.0"
                                        },
                                        "title": {
                                            "type": "string",
                                            "example": "Terms Title"
                                        },
                                        "apply_date": {
                                            "type": "string",
                                            "format": "date",
                                            "example": "2025-03-20"
                                        },
                                        "content": {
                                            "type": "string",
                                            "example": "Optional content",
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "version": [
                                                    "The version field is required."
                                                ],
                                                "title": [
                                                    "The title field is required."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/terms/{id}": {
            "get": {
                "tags": [
                    "Terms"
                ],
                "summary": "Get a single term by ID",
                "operationId": "5a5d0b76b2f45dff707580c89c4bf24b",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the term",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "List of terms matching the ID",
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "version": {
                                                "description": "Version of the term",
                                                "type": "string"
                                            },
                                            "title": {
                                                "description": "Title of the term",
                                                "type": "string"
                                            },
                                            "content": {
                                                "description": "Content of the term",
                                                "type": "string"
                                            },
                                            "apply_date": {
                                                "description": "Apply date of the term",
                                                "type": "string",
                                                "format": "date"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Term not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Term not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "Terms"
                ],
                "summary": "Update an existing term",
                "description": "Updates the details of an existing term by its ID.",
                "operationId": "updateTerm",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the term to update",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "version",
                                    "title",
                                    "apply_date"
                                ],
                                "properties": {
                                    "version": {
                                        "type": "string",
                                        "example": "2.0.0"
                                    },
                                    "title": {
                                        "type": "string",
                                        "example": "Updated Terms Title"
                                    },
                                    "apply_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-04-01"
                                    },
                                    "content": {
                                        "type": "string",
                                        "example": "Updated optional content",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Term updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "version": {
                                            "type": "string",
                                            "example": "2.0.0"
                                        },
                                        "title": {
                                            "type": "string",
                                            "example": "Updated Terms Title"
                                        },
                                        "apply_date": {
                                            "type": "string",
                                            "format": "date",
                                            "example": "2025-04-01"
                                        },
                                        "content": {
                                            "type": "string",
                                            "example": "Updated optional content",
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Term not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Term not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "version": [
                                                    "The version field is required."
                                                ],
                                                "title": [
                                                    "The title field is required."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Terms"
                ],
                "summary": "Delete a term",
                "description": "Deletes a term by its ID.",
                "operationId": "deleteTerm",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the term to delete",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Term deleted successfully"
                    },
                    "404": {
                        "description": "Term not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Term not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "bearerAuth",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Home",
            "description": "Home"
        },
        {
            "name": "Terms",
            "description": "Terms"
        }
    ]
}